<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/imageViewUserListReportDetail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_profile" />

    <TextView
        android:id="@+id/textViewUsernameListReportDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="username"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewUserListReportDetail"
        app:layout_constraintStart_toEndOf="@+id/imageViewUserListReportDetail"
        app:layout_constraintTop_toTopOf="@+id/imageViewUserListReportDetail" />

   

    <TextView
        android:id="@+id/textViewReasonListReportDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_rounded_button"
        android:text="@string/report"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textAllCaps="true"
        android:letterSpacing=".1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUserListReportDetail" />

    <TextView
        android:id="@+id/textViewCommentListReportDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewReasonListReportDetail"
        app:layout_constraintTop_toBottomOf="@+id/textViewReasonListReportDetail"
        tools:text="@string/description" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewCommentListReportDetail"
        app:layout_constraintTop_toBottomOf="@+id/textViewCommentListReportDetail" />

    <TextView
        android:id="@+id/textViewDateListReportDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_date"
        app:layout_constraintBottom_toBottomOf="@+id/textViewUsernameListReportDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewUsernameListReportDetail"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>